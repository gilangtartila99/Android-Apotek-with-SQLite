<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nama_pelanggan"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Nama Pelanggan" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_alamat_pelanggan"
        android:layout_below="@+id/editText_nama_pelanggan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Alamat Pelanggan" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_jk_pelanggan"
        android:layout_below="@+id/editText_alamat_pelanggan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Jenis Kelamin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_status_pelanggan"
        android:layout_below="@+id/editText_jk_pelanggan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Status " />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button_submit_pelanggan"
        android:layout_below="@+id/editText_status_pelanggan"
        android:layout_centerHorizontal="true" />
</RelativeLayout>